<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AquaPP.App"
             xmlns:local="using:AquaPP"
             xmlns:converters="using:AquaPP.Converters"
             xmlns:sukiUi="clr-namespace:SukiUI;assembly=SukiUI"
             RequestedThemeVariant="Light">

    <Application.Resources>
        <ResourceDictionary>
            <converters:AssetStatusColorConverter x:Key="StatusColorConverter" />

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key='Light'>
                    <SolidColorBrush x:Key='DataGridBackground'>White</SolidColorBrush>
                    <SolidColorBrush x:Key='DataGridBorder'>Black</SolidColorBrush>
                </ResourceDictionary>
                <ResourceDictionary x:Key='Dark'>
                    <SolidColorBrush x:Key='DataGridBackground'>Black</SolidColorBrush>
                    <SolidColorBrush x:Key='DataGridBorder'>White</SolidColorBrush>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <StyleInclude Source="avares://SukiUI.Dock/Index.axaml" />
        <sukiUi:SukiTheme ThemeColor="Blue" />
        <StyleInclude Source="avares://AquaPP/Themes/DataGridStyles.axaml" />
    </Application.Styles>
</Application>
