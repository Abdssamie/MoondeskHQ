<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:AquaPP.ViewModels.Pages"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="AquaPP.Views.Pages.SettingsView"
             x:DataType="pages:SettingsViewModel">
    
    <Design.DataContext>
        <pages:SettingsViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20" MaxWidth="800">
            <!-- Header -->
            <suki:GlassCard>
                <StackPanel Spacing="8">
                    <TextBlock Text="Settings" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource SukiText}" />
                    <TextBlock Text="Configure your application preferences" 
                               FontSize="13"
                               Foreground="{DynamicResource SukiLowText}" />
                </StackPanel>
            </suki:GlassCard>

            <!-- Appearance Section -->
            <suki:GlassCard>
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <i:Icon Value="fa-solid fa-palette" 
                                FontSize="20"
                                Foreground="{DynamicResource SukiPrimaryColor}"
                                VerticalAlignment="Center" />
                        <TextBlock Text="Appearance" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    
                    <Separator />
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Theme" 
                                       FontWeight="SemiBold"
                                       FontSize="14" />
                            <TextBlock Text="Choose your preferred color theme" 
                                       FontSize="12"
                                       Foreground="{DynamicResource SukiLowText}" />
                        </StackPanel>
                        
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding Themes}"
                                  SelectedItem="{Binding SelectedTheme}"
                                  MinWidth="200"
                                  VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
            </suki:GlassCard>

            <!-- Data Management Section -->
            <suki:GlassCard>
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <i:Icon Value="fa-solid fa-database" 
                                FontSize="20"
                                Foreground="{DynamicResource SukiPrimaryColor}"
                                VerticalAlignment="Center" />
                        <TextBlock Text="Data Management" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    
                    <Separator />
                    
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" RowSpacing="16">
                        <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                            <TextBlock Text="Auto-save" 
                                       FontWeight="SemiBold"
                                       FontSize="14" />
                            <TextBlock Text="Automatically save changes as you work" 
                                       FontSize="12"
                                       Foreground="{DynamicResource SukiLowText}" />
                        </StackPanel>
                        
                        <ToggleSwitch Grid.Row="0" Grid.Column="1"
                                      VerticalAlignment="Center"
                                      IsChecked="True" />
                        
                        <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4">
                            <TextBlock Text="Backup on exit" 
                                       FontWeight="SemiBold"
                                       FontSize="14" />
                            <TextBlock Text="Create a backup when closing the application" 
                                       FontSize="12"
                                       Foreground="{DynamicResource SukiLowText}" />
                        </StackPanel>
                        
                        <ToggleSwitch Grid.Row="1" Grid.Column="1"
                                      VerticalAlignment="Center"
                                      IsChecked="False" />
                    </Grid>
                </StackPanel>
            </suki:GlassCard>

            <!-- Notifications Section -->
            <suki:GlassCard>
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <i:Icon Value="fa-solid fa-bell" 
                                FontSize="20"
                                Foreground="{DynamicResource SukiPrimaryColor}"
                                VerticalAlignment="Center" />
                        <TextBlock Text="Notifications" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    
                    <Separator />
                    
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" RowSpacing="16">
                        <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                            <TextBlock Text="Show notifications" 
                                       FontWeight="SemiBold"
                                       FontSize="14" />
                            <TextBlock Text="Display toast notifications for important events" 
                                       FontSize="12"
                                       Foreground="{DynamicResource SukiLowText}" />
                        </StackPanel>
                        
                        <ToggleSwitch Grid.Row="0" Grid.Column="1"
                                      VerticalAlignment="Center"
                                      IsChecked="True" />
                        
                        <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4">
                            <TextBlock Text="Sound alerts" 
                                       FontWeight="SemiBold"
                                       FontSize="14" />
                            <TextBlock Text="Play sound for notifications" 
                                       FontSize="12"
                                       Foreground="{DynamicResource SukiLowText}" />
                        </StackPanel>
                        
                        <ToggleSwitch Grid.Row="1" Grid.Column="1"
                                      VerticalAlignment="Center"
                                      IsChecked="False" />
                        
                        <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4">
                            <TextBlock Text="Error notifications" 
                                       FontWeight="SemiBold"
                                       FontSize="14" />
                            <TextBlock Text="Show notifications for errors and warnings" 
                                       FontSize="12"
                                       Foreground="{DynamicResource SukiLowText}" />
                        </StackPanel>
                        
                        <ToggleSwitch Grid.Row="2" Grid.Column="1"
                                      VerticalAlignment="Center"
                                      IsChecked="True" />
                    </Grid>
                </StackPanel>
            </suki:GlassCard>

            <!-- Streaming Configuration Section -->
            <suki:GlassCard>
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <i:Icon Value="fa-solid fa-wave-square" 
                                FontSize="20"
                                Foreground="{DynamicResource SukiPrimaryColor}"
                                VerticalAlignment="Center" />
                        <TextBlock Text="Streaming Configuration" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    
                    <Separator />
                    
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" RowSpacing="16">
                        <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                            <TextBlock Text="Update Interval (ms)" 
                                       FontWeight="SemiBold"
                                       FontSize="14" />
                            <TextBlock Text="How often to update real-time data (100-5000ms)" 
                                       FontSize="12"
                                       Foreground="{DynamicResource SukiLowText}" />
                        </StackPanel>
                        
                        <NumericUpDown Grid.Row="0" Grid.Column="1"
                                       Value="{Binding UpdateInterval}"
                                       Minimum="100"
                                       Maximum="5000"
                                       Increment="100"
                                       MinWidth="150"
                                       VerticalAlignment="Center" />
                        
                        <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4">
                            <TextBlock Text="Buffer Size (points)" 
                                       FontWeight="SemiBold"
                                       FontSize="14" />
                            <TextBlock Text="Number of data points to keep in memory (100-10000)" 
                                       FontSize="12"
                                       Foreground="{DynamicResource SukiLowText}" />
                        </StackPanel>
                        
                        <NumericUpDown Grid.Row="1" Grid.Column="1"
                                       Value="{Binding BufferSize}"
                                       Minimum="100"
                                       Maximum="10000"
                                       Increment="100"
                                       MinWidth="150"
                                       VerticalAlignment="Center" />
                        
                        <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4">
                            <TextBlock Text="Auto-save changes" 
                                       FontWeight="SemiBold"
                                       FontSize="14" />
                            <TextBlock Text="Automatically apply streaming configuration changes" 
                                       FontSize="12"
                                       Foreground="{DynamicResource SukiLowText}" />
                        </StackPanel>
                        
                        <ToggleSwitch Grid.Row="2" Grid.Column="1"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding AutoSaveStreaming}" />
                    </Grid>
                </StackPanel>
            </suki:GlassCard>

            <!-- Data Retention Section -->
            <suki:GlassCard>
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <i:Icon Value="fa-solid fa-clock-rotate-left" 
                                FontSize="20"
                                Foreground="{DynamicResource SukiPrimaryColor}"
                                VerticalAlignment="Center" />
                        <TextBlock Text="Data Retention" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    
                    <Separator />
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Retention Period (days)" 
                                       FontWeight="SemiBold"
                                       FontSize="14" />
                            <TextBlock Text="How long to keep historical data (7-365 days)" 
                                       FontSize="12"
                                       Foreground="{DynamicResource SukiLowText}" />
                        </StackPanel>
                        
                        <NumericUpDown Grid.Column="1"
                                       Value="{Binding RetentionDays}"
                                       Minimum="7"
                                       Maximum="365"
                                       Increment="1"
                                       MinWidth="150"
                                       VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
            </suki:GlassCard>

            <!-- System Information Section -->
            <suki:GlassCard>
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <i:Icon Value="fa-solid fa-circle-info" 
                                FontSize="20"
                                Foreground="{DynamicResource SukiPrimaryColor}"
                                VerticalAlignment="Center" />
                        <TextBlock Text="System Information" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    
                    <Separator />
                    
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="12" ColumnSpacing="16">
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Application:" 
                                   FontWeight="SemiBold"
                                   FontSize="14" />
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   Text="AquaPP" 
                                   FontSize="14"
                                   Foreground="{DynamicResource SukiLowText}" />
                        
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Version:" 
                                   FontWeight="SemiBold"
                                   FontSize="14" />
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   Text="{Binding AppVersion}" 
                                   FontSize="14"
                                   Foreground="{DynamicResource SukiLowText}" />
                        
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Database Size:" 
                                   FontWeight="SemiBold"
                                   FontSize="14" />
                        <TextBlock Grid.Row="2" Grid.Column="1"
                                   Text="{Binding DatabaseSize}" 
                                   FontSize="14"
                                   Foreground="{DynamicResource SukiLowText}" />
                        
                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="Total Sensors:" 
                                   FontWeight="SemiBold"
                                   FontSize="14" />
                        <TextBlock Grid.Row="3" Grid.Column="1"
                                   Text="{Binding TotalSensorCount}" 
                                   FontSize="14"
                                   Foreground="{DynamicResource SukiLowText}" />
                        
                        <TextBlock Grid.Row="4" Grid.Column="0"
                                   Text="Description:" 
                                   FontWeight="SemiBold"
                                   FontSize="14" />
                        <TextBlock Grid.Row="4" Grid.Column="1"
                                   Text="Industrial IoT Monitoring System" 
                                   FontSize="14"
                                   Foreground="{DynamicResource SukiLowText}" />
                    </Grid>
                </StackPanel>
            </suki:GlassCard>
        </StackPanel>
    </ScrollViewer>
    
</UserControl>
