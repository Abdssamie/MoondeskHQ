<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:AquaPP.ViewModels.Pages"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             xmlns:iot="clr-namespace:AquaPP.Core.Models.IoT"
             xmlns:converters="clr-namespace:AquaPP.Converters"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="AquaPP.Views.Pages.AlertManagementView"
             x:DataType="pages:AlertManagementViewModel">
    
    <UserControl.Resources>
        <converters:AlertSeverityColorConverter x:Key="SeverityColorConverter" />
        <converters:AlertStatusColorConverter x:Key="StatusColorConverter" />
    </UserControl.Resources>
    
    <Design.DataContext>
        <pages:AlertManagementViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="20" RowSpacing="20">
        <!-- Header with Unacknowledged Count Badge -->
        <suki:GlassCard Grid.Row="0">
            <Grid ColumnDefinitions="*,Auto" Height="60">
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            Spacing="12"
                            VerticalAlignment="Center">
                    <i:Icon Value="fa-solid fa-bell" 
                            FontSize="24"
                            Foreground="{DynamicResource SukiPrimaryColor}"
                            VerticalAlignment="Center" />
                    <TextBlock Text="Alert Management" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource SukiText}"
                               VerticalAlignment="Center" />
                    
                    <!-- Unacknowledged Alert Count Badge -->
                    <Border Background="#F44336" 
                            CornerRadius="12" 
                            Padding="10,4"
                            VerticalAlignment="Center"
                            IsVisible="{Binding UnacknowledgedCount}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <i:Icon Value="fa-solid fa-exclamation" 
                                    FontSize="12"
                                    Foreground="White" />
                            <TextBlock Text="{Binding UnacknowledgedCount}" 
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="12" />
                            <TextBlock Text="Unacknowledged" 
                                       Foreground="White"
                                       FontSize="12" />
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Spacing="12"
                            VerticalAlignment="Center">
                    <Button Classes="Flat" Command="{Binding RefreshCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <i:Icon Value="fa-solid fa-arrows-rotate" FontSize="14" />
                            <TextBlock Text="Refresh" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </suki:GlassCard>

        <!-- Filter Panel -->
        <suki:GlassCard Grid.Row="1">
            <StackPanel Spacing="16">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <i:Icon Value="fa-solid fa-filter" 
                            FontSize="16"
                            Foreground="{DynamicResource SukiPrimaryColor}"
                            VerticalAlignment="Center" />
                    <TextBlock Text="Filters" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" />
                </StackPanel>
                
                <Separator />
                
                <Grid ColumnDefinitions="*,*,*,*,Auto" ColumnSpacing="12">
                    <!-- Start Date -->
                    <StackPanel Grid.Column="0" Spacing="6">
                        <TextBlock Text="Start Date" 
                                   FontSize="12"
                                   Foreground="{DynamicResource SukiLowText}" />
                        <DatePicker SelectedDate="{Binding StartDate}"
                                    HorizontalAlignment="Stretch" />
                    </StackPanel>
                    
                    <!-- End Date -->
                    <StackPanel Grid.Column="1" Spacing="6">
                        <TextBlock Text="End Date" 
                                   FontSize="12"
                                   Foreground="{DynamicResource SukiLowText}" />
                        <DatePicker SelectedDate="{Binding EndDate}"
                                    HorizontalAlignment="Stretch" />
                    </StackPanel>
                    
                    <!-- Asset Filter -->
                    <StackPanel Grid.Column="2" Spacing="6">
                        <TextBlock Text="Asset" 
                                   FontSize="12"
                                   Foreground="{DynamicResource SukiLowText}" />
                        <ComboBox ItemsSource="{Binding AssetFilterOptions}"
                                  SelectedItem="{Binding SelectedAssetFilter}"
                                  HorizontalAlignment="Stretch" />
                    </StackPanel>
                    
                    <!-- Severity Filter -->
                    <StackPanel Grid.Column="3" Spacing="6">
                        <TextBlock Text="Severity" 
                                   FontSize="12"
                                   Foreground="{DynamicResource SukiLowText}" />
                        <ComboBox ItemsSource="{Binding SeverityFilterOptions}"
                                  SelectedItem="{Binding SelectedSeverityFilter}"
                                  HorizontalAlignment="Stretch" />
                    </StackPanel>
                    
                    <!-- Clear Filters Button -->
                    <Button Grid.Column="4" 
                            Command="{Binding ClearFiltersCommand}"
                            VerticalAlignment="Bottom"
                            ToolTip.Tip="Clear all filters">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <i:Icon Value="fa-solid fa-xmark" FontSize="14" />
                            <TextBlock Text="Clear" />
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </suki:GlassCard>

        <!-- Alerts DataGrid -->
        <suki:GlassCard Grid.Row="2">
            <Grid RowDefinitions="Auto,*">
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal" 
                            Spacing="12"
                            Margin="0,0,0,16">
                    <i:Icon Value="fa-solid fa-list" 
                            FontSize="16"
                            Foreground="{DynamicResource SukiPrimaryColor}"
                            VerticalAlignment="Center" />
                    <TextBlock Text="Alert History" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" />
                    <TextBlock Text="{Binding FilteredAlerts.Count, StringFormat='({0} alerts)'}" 
                               FontSize="14"
                               Foreground="{DynamicResource SukiLowText}"
                               VerticalAlignment="Center" />
                </StackPanel>
                
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding FilteredAlerts}"
                          SelectedItem="{Binding SelectedAlert}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single">
                    
                    <DataGrid.Columns>
                        <!-- Timestamp Column -->
                        <DataGridTextColumn Header="Timestamp" 
                                            Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"
                                            Width="160" />
                        
                        <!-- Asset Column -->
                        <DataGridTextColumn Header="Asset" 
                                            Binding="{Binding AssetName}"
                                            Width="*" />
                        
                        <!-- Sensor Column -->
                        <DataGridTextColumn Header="Sensor" 
                                            Binding="{Binding SensorName}"
                                            Width="*" />
                        
                        <!-- Severity Column with Color Coding -->
                        <DataGridTemplateColumn Header="Severity" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="8" 
                                            Padding="8,4"
                                            HorizontalAlignment="Center"
                                            Background="{Binding Severity, Converter={StaticResource SeverityColorConverter}}">
                                        <TextBlock Text="{Binding Severity}" 
                                                   Foreground="White"
                                                   FontWeight="SemiBold"
                                                   FontSize="11"
                                                   HorizontalAlignment="Center" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Message Column -->
                        <DataGridTextColumn Header="Message" 
                                            Binding="{Binding Message}"
                                            Width="2*" />
                        
                        <!-- Status Column -->
                        <DataGridTemplateColumn Header="Status" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <Ellipse Width="8" 
                                                 Height="8" 
                                                 VerticalAlignment="Center"
                                                 Fill="{Binding Acknowledged, Converter={StaticResource StatusColorConverter}}" />
                                        <TextBlock Text="{Binding Status}" 
                                                   FontSize="12"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Actions Column -->
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Classes="Flat"
                                            Command="{Binding $parent[DataGrid].((pages:AlertManagementViewModel)DataContext).AcknowledgeAlertCommand}"
                                            IsEnabled="{Binding !Acknowledged}"
                                            HorizontalAlignment="Center"
                                            ToolTip.Tip="Acknowledge alert">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <i:Icon Value="fa-solid fa-check" FontSize="12" />
                                            <TextBlock Text="Ack" FontSize="11" />
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </suki:GlassCard>

        <!-- Selected Alert Detail Panel and Action Buttons -->
        <Grid Grid.Row="3" ColumnDefinitions="*,Auto" ColumnSpacing="20">
            <!-- Alert Detail Panel -->
            <suki:GlassCard Grid.Column="0" 
                            IsVisible="{Binding SelectedAlert, Converter={x:Static ObjectConverters.IsNotNull}}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <i:Icon Value="fa-solid fa-circle-info" 
                                FontSize="16"
                                Foreground="{DynamicResource SukiPrimaryColor}"
                                VerticalAlignment="Center" />
                        <TextBlock Text="Alert Details" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    
                    <Separator />
                    
                    <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="20" RowDefinitions="Auto,Auto" RowSpacing="12">
                        <!-- Row 1 -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                            <TextBlock Text="Trigger Value" 
                                       FontSize="11"
                                       Foreground="{DynamicResource SukiLowText}" />
                            <TextBlock Text="{Binding SelectedAlert.TriggerValue, StringFormat='{}{0:F2}'}" 
                                       FontSize="14"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                        
                        <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                            <TextBlock Text="Threshold Value" 
                                       FontSize="11"
                                       Foreground="{DynamicResource SukiLowText}" />
                            <TextBlock Text="{Binding SelectedAlert.ThresholdValue, StringFormat='{}{0:F2}'}" 
                                       FontSize="14"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                        
                        <StackPanel Grid.Row="0" Grid.Column="2" Spacing="4">
                            <TextBlock Text="Acknowledged By" 
                                       FontSize="11"
                                       Foreground="{DynamicResource SukiLowText}" />
                            <TextBlock Text="{Binding SelectedAlert.AcknowledgedBy, FallbackValue='N/A'}" 
                                       FontSize="14"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                        
                        <StackPanel Grid.Row="0" Grid.Column="3" Spacing="4">
                            <TextBlock Text="Acknowledged At" 
                                       FontSize="11"
                                       Foreground="{DynamicResource SukiLowText}" />
                            <TextBlock Text="{Binding SelectedAlert.AcknowledgedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}', FallbackValue='N/A'}" 
                                       FontSize="14"
                                       FontWeight="SemiBold" />
                        </StackPanel>
                        
                        <!-- Row 2 -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Spacing="4">
                            <TextBlock Text="Full Message" 
                                       FontSize="11"
                                       Foreground="{DynamicResource SukiLowText}" />
                            <TextBlock Text="{Binding SelectedAlert.Message}" 
                                       FontSize="13"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </suki:GlassCard>
            
            <!-- Action Buttons -->
            <suki:GlassCard Grid.Column="1" VerticalAlignment="Stretch">
                <StackPanel Spacing="12" VerticalAlignment="Center">
                    <Button Command="{Binding AcknowledgeAlertCommand}"
                            IsEnabled="{Binding SelectedAlert, Converter={x:Static ObjectConverters.IsNotNull}}"
                            HorizontalAlignment="Stretch"
                            Classes="Accent">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <i:Icon Value="fa-solid fa-check" FontSize="14" />
                            <TextBlock Text="Acknowledge" />
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding AcknowledgeAllCommand}"
                            IsEnabled="{Binding UnacknowledgedCount}"
                            HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <i:Icon Value="fa-solid fa-check-double" FontSize="14" />
                            <TextBlock Text="Acknowledge All" />
                        </StackPanel>
                    </Button>
                    
                    <Separator />
                    
                    <Button Command="{Binding ExportAlertsCommand}"
                            HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <i:Icon Value="fa-solid fa-download" FontSize="14" />
                            <TextBlock Text="Export" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </suki:GlassCard>
        </Grid>
    </Grid>
    
</UserControl>
