<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:AquaPP.ViewModels.Pages"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             xmlns:converters="clr-namespace:AquaPP.Converters"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="AquaPP.Views.Pages.SensorListView"
             x:DataType="pages:SensorListViewModel">

    <Design.DataContext>
        <pages:SensorListViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*" Margin="20" RowSpacing="20">
        <!-- Header Section with Statistics -->
        <suki:GlassCard Grid.Row="0">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <i:Icon Value="fa-solid fa-list"
                                FontSize="24"
                                Foreground="{DynamicResource SukiPrimaryColor}"
                                VerticalAlignment="Center" />
                        <TextBlock Text="Sensor List"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center" />
                    </StackPanel>

                    <!-- Statistics Row -->
                    <Grid ColumnDefinitions="Auto,Auto,Auto" ColumnSpacing="24">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Total Sensors"
                                       FontSize="11"
                                       Foreground="{DynamicResource SukiLowText}" />
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <i:Icon Value="fa-solid fa-list"
                                        FontSize="16"
                                        Foreground="{DynamicResource SukiPrimaryColor}"
                                        VerticalAlignment="Center" />
                                <TextBlock Text="{Binding TotalSensors}"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="Online"
                                       FontSize="11"
                                       Foreground="{DynamicResource SukiLowText}" />
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <i:Icon Value="fa-solid fa-circle-check"
                                        FontSize="16"
                                        Foreground="#4CAF50"
                                        VerticalAlignment="Center" />
                                <TextBlock Text="{Binding OnlineSensors}"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="#4CAF50"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Spacing="4">
                            <TextBlock Text="Offline"
                                       FontSize="11"
                                       Foreground="{DynamicResource SukiLowText}" />
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <i:Icon Value="fa-solid fa-circle-xmark"
                                        FontSize="16"
                                        Foreground="#9E9E9E"
                                        VerticalAlignment="Center" />
                                <TextBlock Text="{Binding OfflineSensors}"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="#9E9E9E"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="12"
                            VerticalAlignment="Center">
                    <!-- Streaming Toggle Button -->
                    <Button Classes="Flat"
                            Command="{Binding ToggleStreamingCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <i:Icon FontSize="14" VerticalAlignment="Center"
                                    Value="{Binding IsStreaming, Converter={x:Static converters:StreamingStatusToIconConverter.Instance}}">
                            </i:Icon>
                            <TextBlock VerticalAlignment="Center"
                                       Text="{Binding IsStreaming, Converter={x:Static converters:StreamingStatusToTextConverter.Instance}}">
                            </TextBlock>
                            <!-- Streaming Indicator -->
                            <Border Width="8"
                                    Height="8"
                                    CornerRadius="4"
                                    Background="#4CAF50"
                                    IsVisible="{Binding IsStreaming}">
                                <Border.Styles>
                                    <Style Selector="Border">
                                        <Style.Animations>
                                            <Animation Duration="0:0:1" IterationCount="Infinite">
                                                <KeyFrame Cue="0%">
                                                    <Setter Property="Opacity" Value="1.0" />
                                                </KeyFrame>
                                                <KeyFrame Cue="50%">
                                                    <Setter Property="Opacity" Value="0.3" />
                                                </KeyFrame>
                                                <KeyFrame Cue="100%">
                                                    <Setter Property="Opacity" Value="1.0" />
                                                </KeyFrame>
                                            </Animation>
                                        </Style.Animations>
                                    </Style>
                                </Border.Styles>
                            </Border>
                        </StackPanel>
                    </Button>

                    <Button Classes="Flat" Command="{Binding RefreshCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <i:Icon Value="fa-solid fa-arrows-rotate" FontSize="14" />
                            <TextBlock Text="Refresh" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </suki:GlassCard>

        <!-- Filter Controls -->
        <suki:GlassCard Grid.Row="1">
            <Grid ColumnDefinitions="*,Auto,Auto,Auto" ColumnSpacing="16">
                <!-- Search Box -->
                <TextBox Grid.Column="0"
                         Text="{Binding SearchText}"
                         Watermark="Search sensors by name, type, or asset..."
                         Classes="Flat">
                    <TextBox.InnerLeftContent>
                        <i:Icon Value="fa-solid fa-magnifying-glass"
                                FontSize="14"
                                Margin="8,0,0,0"
                                Foreground="{DynamicResource SukiLowText}" />
                    </TextBox.InnerLeftContent>
                </TextBox>

                <!-- Group By -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="8"
                            VerticalAlignment="Center">
                    <TextBlock Text="Group by:"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource SukiLowText}" />
                    <ComboBox ItemsSource="{Binding GroupOptions}"
                              SelectedItem="{Binding SelectedGroupBy}"
                              MinWidth="120" />
                </StackPanel>

                <!-- Status Filter -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            Spacing="8"
                            VerticalAlignment="Center">
                    <TextBlock Text="Status:"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource SukiLowText}" />
                    <ComboBox ItemsSource="{Binding StatusOptions}"
                              SelectedItem="{Binding SelectedStatusFilter}"
                              MinWidth="120" />
                </StackPanel>

                <!-- Results Count -->
                <StackPanel Grid.Column="3"
                            Orientation="Horizontal"
                            Spacing="6"
                            VerticalAlignment="Center">
                    <TextBlock Text="{Binding FilteredSensors.Count}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" />
                    <TextBlock Text="results"
                               Foreground="{DynamicResource SukiLowText}"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </suki:GlassCard>

        <!-- Sensor DataGrid -->
        <suki:GlassCard Grid.Row="2">
            <Grid RowDefinitions="*">
                <!-- Loading Indicator -->
                <StackPanel IsVisible="{Binding IsLoading}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="12">
                    <i:Icon Value="fa-solid fa-spinner"
                            FontSize="48"
                            Foreground="{DynamicResource SukiPrimaryColor}"
                            HorizontalAlignment="Center" />
                    <TextBlock Text="Loading sensors..."
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource SukiLowText}" />
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid Name="SensorDataGrid"
                          ItemsSource="{Binding FilteredSensors}"
                          IsVisible="{Binding !IsLoading}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          HeadersVisibility="Column">

                    <DataGrid.Styles>
                        <Style Selector="DataGridRow">
                            <Setter Property="Cursor" Value="Hand" />
                        </Style>
                    </DataGrid.Styles>

                    <DataGrid.Columns>
                        <!-- Status Indicator Column -->
                        <DataGridTemplateColumn Header="Status" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="8"
                                                VerticalAlignment="Center"
                                                Margin="8,0">
                                        <Ellipse Width="10"
                                                 Height="10"
                                                 Fill="{Binding StatusColor}" />
                                        <TextBlock Text="{Binding Status}"
                                                   FontSize="12"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Name Column -->
                        <DataGridTextColumn Header="Name"
                                            Binding="{Binding Name}"
                                            Width="*"
                                            MinWidth="150" />

                        <!-- Type Column -->
                        <DataGridTextColumn Header="Type"
                                            Binding="{Binding Type}"
                                            Width="120" />

                        <!-- Current Value Column -->
                        <DataGridTemplateColumn Header="Current Value" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="6"
                                                VerticalAlignment="Center"
                                                Margin="8,0">
                                        <TextBlock Text="{Binding CurrentValue, StringFormat='{}{0:F2}'}"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center" />
                                        <TextBlock Text="{Binding Unit}"
                                                   Foreground="{DynamicResource SukiLowText}"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Asset Column -->
                        <DataGridTextColumn Header="Asset"
                                            Binding="{Binding AssetName}"
                                            Width="*"
                                            MinWidth="150" />

                        <!-- Last Update Column -->
                        <DataGridTemplateColumn Header="Last Update" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="6"
                                                VerticalAlignment="Center"
                                                Margin="8,0">
                                        <i:Icon Value="fa-solid fa-clock"
                                                FontSize="12"
                                                Foreground="{DynamicResource SukiLowText}"
                                                VerticalAlignment="Center" />
                                        <TextBlock
                                            Text="{Binding LastUpdate, StringFormat='{}{0:MM/dd/yyyy HH:mm:ss}'}"
                                            FontSize="12"
                                            Foreground="{DynamicResource SukiLowText}"
                                            VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Actions Column -->
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Classes="Flat"
                                            Command="{Binding $parent[DataGrid].((pages:SensorListViewModel)DataContext).NavigateToDetailCommand}"
                                            CommandParameter="{Binding SensorId}"
                                            HorizontalAlignment="Center"
                                            ToolTip.Tip="View Details">
                                        <i:Icon Value="fa-solid fa-arrow-right" FontSize="14" />
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Empty State - Will show when FilteredSensors is empty and not loading -->
                <!-- Note: This requires manual visibility management in code-behind or a converter -->
            </Grid>
        </suki:GlassCard>
    </Grid>

</UserControl>